# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto lan0 
iface lan0 inet static
	address 192.168.100.1
	netmask	255.255.255.0

auto wan0
iface wan0 inet dhcp
	pre-up iptables -t nat -A POSTROUTING -o $IFACE -j MASQUERADE
	pre-up sysctl net.ipv4.conf.default.forwarding=1
	pre-up sysctl net.ipv6.conf.default.forwarding=1
	post-down iptables -t nat -D POSTROUTING -o $IFACE -j MASQUERADE
	post-down sysctl net.ipv4.conf.default.forwarding=0
	post-down sysctl net.ipv6.conf.default.forwarding=0

